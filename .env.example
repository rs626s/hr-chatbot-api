# PostgreSQL Configuration
POSTGRES_DB=chatbotdb
POSTGRES_USER=chatbot_user
POSTGRES_PASSWORD=CHANGEME_GENERATE_SECURE_PASSWORD
POSTGRES_PORT=5432

# Activate production profile
SPRING_PROFILES_ACTIVE=prod

# Datasource connection
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/chatbotdb
SPRING_DATASOURCE_USERNAME=chatbot_user
SPRING_DATASOURCE_PASSWORD=CHANGE_ME_TO_STRONG_PASSWORD

# JWT Configuration
# IMPORTANT: Generate a secure 256-bit key
JWT_SECRET=CHANGE_ME_TO_LONG_RANDOM_SECRET_KEY

# Token expiration in milliseconds (default: 24 hours)
JWT_EXPIRATION=86400000

# Optional: Logging Overrides
# SPRING_JPA_SHOW_SQL=false
# SPRING_JPA_DDL=validate